<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.cyd.portfolio.MyAppPortfolio">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="My Nanodegree apps"
        android:id="@+id/textViewTitle"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewTitle"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:weightSum="6"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        >

    <Button
        android:text="Spotify Streamer"
        android:id="@+id/button1Spotify"
        android:background="@color/blue"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_width="match_parent"

         />

    <Button
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Score App"
        android:id="@+id/button2ScoreApp"
        android:background="@color/blue"
        android:layout_below="@+id/button1Spotify"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        />

    <Button
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Library App"
        android:id="@+id/button3Library"
        android:background="@color/blue"
        android:layout_below="@+id/button2ScoreApp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        />

    <Button
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Build it bigger"
        android:id="@+id/button4BuildItBigger"
        android:background="@color/blue"
        android:layout_below="@+id/button3Library"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        />

    <Button
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="XYZ Reader"
        android:id="@+id/button5XYZReader"
        android:background="@color/blue"
        android:layout_below="@+id/button4BuildItBigger"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        />

    <Button
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Capstone: my own app"
        android:id="@+id/button6Capstone"
        android:background="@color/blue"
        android:layout_below="@+id/button5XYZReader"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        />

   </LinearLayout>
</RelativeLayout>
